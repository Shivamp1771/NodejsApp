<!DOCTYPE html>
<html lang="en">
    <%- include('layouts/header'); -%>
    <body>
        <!-- Navigation-->
        <%- include('layouts/navbar'); -%>
        <!-- Page Header-->
        <header class="masthead" style="background-image: url('img/greetingmessage.jpg')">
            <div class="container position-relative px-4 px-lg-5">
                <div class="row gx-4 gx-lg-5 justify-content-center">
                    <div class="col-md-10 col-lg-8 col-xl-7">
                        <div class="site-heading">
                            <h1>Kiosk for picking time slot for G and G2 drive test</h1>
                            <span class="subheading">Driver Interface</span>
                        </div>
                    </div>
                </div>
            </div>
        </header>
        <!-- Main Content-->
        <div class="container">
            <div class="my-5">
                <h2>Sign Up Form</h2>
                <br>
                <form id="signup_form" action="/auth/signup" method="POST">
                    <% if(errors != null && errors.length >0) { %>
                        <ul class="list-group"></ul>
                        <% for (var i=0; i<errors.length; i++) { %>
                            <li class="list-group-item list-group-item-danger">
                                <%= errors[i] %></li>
                            <% } %>
                            </ul>
                    <% } %>
                <div class="form-group">
                    <label for="Username">Username</label>
                    <input type="text" class="form-control" id="username" placeholder="Enter Username" name="Username" value="<%= Username %>">
                </div>
                <br>
                <div class="form-group">
                    <label for="pwd">Password</label>
                    <input type="password" class="form-control" id="pwd" placeholder="Enter Password" name="pwd" value="<%= pwd %>">
                </div>
                <br>
                <div class="form-group">
                    <label for="repeat_pwd">Repeat Password</label>
                    <input type="password" class="form-control" id="repeat_pwd" placeholder="Enter Repeat Password" name="repeat_pwd">
                </div>
                <br>
                <div class="form-group">
                    <select class="UserType" data-style="btn-info" name="UserType">
                        <optgroup label="Select UserType">
                            <option name="Driver" value="Driver">Driver</option>
                            <option name="Examiner" value="Examiner">Examiner</option>
                            <option name="Admin" value="Admin">Admin</option>
                        </optgroup>
                    </select>
                </div>
                <br>
                <div class="form-group">
                <button type="submit" class="btn btn-primary">Submit</button>
                </div>
                </form>
            </div>
        </div>
        
        <!-- Footer-->
        <%- include('layouts/footer'); -%>
        <%- include('layouts/scripts'); -%>
    </body>
</html>
